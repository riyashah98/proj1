<h3>Trainer</h3>
<p>Name: <%= @trainer.name if @trainer.name %></p>
<p>Email: <%= @trainer.email if @trainer.email %></p>
<% @trainer.pokemons.each do |pok| %>
	<% if pok.ndex %>
    <%= image_tag("pokemon/#{pok.ndex}.png", alt: "pokemon") %>
  <% end %>
	<p>Pokemon Name: <%= pok.name if pok.name %> </p>
	<p>Pokemon Level: <%= pok.level if pok.level %> </p>
	<p>Pokemon Health: <%= pok.health if pok.health %> </p>
	<%= button_to "Damage!", damage_path(id: pok), :class => "button medium", :method => :patch %>
	<%= button_to "Create!", new_pokemon_path(id: pok), :class => "button medium", :method => :get %>
<% end %>
